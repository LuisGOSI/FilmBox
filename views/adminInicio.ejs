<%-  include("templates/encabezado") %>
<%-  include("templates/menu") %>

<div class="container mt-5">
    <div class="container">
        <div class="card">
            <div class="card-header">
                <h1>Usuarios</h1>
            </div>
            <div class="card-body" style="overflow-y: scroll; height: 300px;">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Nombre</th>
                            <th>Usuario</th>
                            <th>Password</th>
                            <th>Foto</th>
                            <th>Editar / Borrar</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%
                        users.forEach((usuario)=>{
                        %>
                        <tr>
                            <td><%= usuario.id %></td>
                            <td><%= usuario.nombre %></td>
                            <td><%= usuario.usuario %></td>
                            <td>*******</td>
                            <td><img width="100px" height="100px" src="/images/<%=usuario.foto %>"></td>
                            <td>
                                <a href="/editar/<%= usuario.id %>">Editar |</a>
                                <a href="/borrar/<%= usuario.id %>">Borrar</a>
                            </td>
                        </tr>
                        <%
                        });
                        %>
                    </tbody>
                </table>
            </div>
            <div class="card-footer"></div>
        </div>
    </div>
</div>

<div class="container mt-5">
    <div class="container">
        <div class="card">
            <div class="card-header">
                <h1>Películas</h1>
            </div>
            <div class="card-body" style="overflow-y: scroll; height: 300px;">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Título</th>
                            <th>Género</th>
                            <th>Foto</th>
                            <th>Editar / Borrar</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%
                        peliculas.forEach((pelicula)=>{
                        %>
                        <tr>
                            <td><%= pelicula.titulo %></td>
                            <td><%= pelicula.genero.join(", ") %></td>
                            <td><img width="100px" height="100px" src="/images/<%=pelicula.foto %>"></td>
                            <td>
                                <a href="/editarPeli/<%= pelicula.id %>">Editar |</a>
                                <a href="/borrarPeli/<%= pelicula.id %>">Borrar</a>
                            </td>
                        </tr>
                        <%
                        });
                        %>
                    </tbody>
                </table>
            </div>
            <div class="card-footer"></div>
        </div>
    </div>
</div>

