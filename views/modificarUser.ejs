<%- include("templates/encabezado") %>
    <%- include("templates/menu") %>

        <div id="particles-js"></div>

        <div class="container mt-5">
            <form action="/editar" method="post" enctype="multipart/form-data">
                <div class="card">
                    <div class="card-header">
                        <h1>Modificar usuario</h1>
                    </div>
                    <div class="card-body">
                        <input type="hidden" name="id" id="id" value="<%= user.id %>">
                        <input type="hidden" name="passwordViejo" id="passwordViejo" value="<%= user.password %>">
                        <input type="hidden" name="saltViejo" id="saltViejo" value="<%= user.salt %>">
                        <input type="hidden" name="fotoVieja" id="fotoVieja" value="<%= user.foto %>">
                        <input type="hidden" name="admin" id="admin" value=false>
                        <label for="nombre">Nombre:</label>
                        <input class="form-control mb-3" type="text" value="<%= user.nombre %>" name="nombre"
                            id="nombre" placeholder="Nombre" autofocus>
                        <label for="correo">Correo:</label>
                        <input class="form-control mb-3" type="email" value="<%= user.correo %>" name="correo"
                            id="correo" placeholder="Correo">
                        <label for="usuario">Usuario:</label>
                        <input class="form-control mb-3" type="text" value="<%= user.usuario %>" name="usuario"
                            id="usuario" placeholder="Usuario">
                        <label for="password">Nueva contrase√±a (Opcional):</label>
                        <input class="form-control mb-3" type="password" name="password" id="password"
                            placeholder="Nuevo password">
                        <label for="foto">Nueva foto (Opcional):</label>
                        <input class="form-control mb-3" type="file" value="<%= user.foto %>" name="foto" id="foto"
                            placeholder="Foto">
                        <div class="text-center">
                            <img src="/images/<%=user.foto %>" alt="Foto de usuario" class="img-fluid" height="150px"
                                width="150px">
                        </div>
                        <div class="card-footer">
                            <button class="form-control btn btn-primary" type="submit">Modificar usuario</button>
                        </div>
                    </div>
            </form>
        </div>

        <%- include("templates/pie") %>


